<h1 class="mb-4">All Tasks</h1>
<ul class="list-group">
  <% @tasks.each do |task| %>
  <li class="list-group-item d-flex justify-content-between align-items-center">
  <div class="d-flex align-items-center">
  <% if task.completed %>
  <i class="fas fa-check-square text-success me-2"></i>
  <% else %>
  <i class="fas fa-check-square text-secondary me-2"></i>
  <% end %>
    <%= link_to task.title, task_path(task), class: "text-decoration-none text-dark fw-medium"%>
  </div>
  <div>
    <%= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-outline-primary me-2" %>
    <%= link_to task_path(task), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-outline-danger", title: "Delete Task" do %>
    <i class="fas fa-trash-alt"></i>
    <% end %>
  </div>

  </li>
  <% end %>
</ul>
<div class="mt-3">
  <%= link_to "+ Add new task", new_task_path, class: "text-decoration-none" %>
</div>
